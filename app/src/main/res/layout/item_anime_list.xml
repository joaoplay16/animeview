<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:gravity="center_vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/txtIniciais"
		android:layout_width="60.0dip"
		android:layout_height="80.0dip"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginEnd="5.0dip"
		android:autoSizeMaxTextSize="90dip"
		android:fontFamily="@font/armata"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/txtTitulo"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/txtIniciais"
		android:layout_toEndOf="@id/txtIniciais"
		android:ellipsize="end"
		android:fontFamily="@font/armata"
		android:maxLines="2"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:text="@null"
		android:textSize="16sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/txtUltimoEp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtTitulo"
		android:layout_toEndOf="@id/txtIniciais"
		android:fontFamily="@font/armata"
		android:gravity="center"
		android:text="@string/ultimo_ep_assistido"
		android:textSize="15sp" />

	<TextView
		android:id="@+id/txtDiaDePostagem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtUltimoEp"
		android:layout_toEndOf="@id/txtIniciais"
		android:fontFamily="@font/armata"
		android:paddingBottom="3dp"
		android:text="@string/ultimo_ep_assistido"
		android:textSize="15sp" />
</RelativeLayout>
